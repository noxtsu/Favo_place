<div class="container-fluid">
  <div class="row">
    <%= render 'posts/sidebar', posts: @posts %>

    <div class="col-md-8">
      <div class="userdata m-3 p-2">
        <h3><%= @user.name %>さんのページ</h3>
        <%= link_to "会員情報編集", edit_user_path, class:"btn btn-success" %>
      </div>

      <% @post.each do |post| %>
      <div class="post border border-info rounded m-3 p-2">
      <h3><%= post.place_name %></h3>
      <div class="d-flex flex-row bd-highlight mb-3">
        <div><%= attachment_image_tag post, :place_image, :fill, 300, 300, format:'jpeg' %></div>

        <div id='map'></div>
        <style>
        #map {height: 300px; width: 300px;}
        </style>

        <script>
        let map
        function initMap(){
          geocoder = new google.maps.Geocoder()
          map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: <%= post.latitude %>, lng: <% post.longitude %> },
            zoom: 12,
          });
          marker = new google.maps.Marker({
            position:  {lat: <%= post.latitude %>, lng: <% post.longitude %> },
            map: map
          });
        }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDoxhu4tckgppQ5QhtBW6pzZGzCTL7ZDq0&callback=initMap" async defer></script>
      </div>
      <div class="col-md-8">
        <%= post.text %>
      </div>
      <%= link_to post_path(post.id), class:"btn btn-outline-secondary" do %>
    　　詳しく見る
    　<% end %>
      <%= link_to edit_post_path, class:"btn btn-outline-secondary" do %>
        編集する
      <% end %>
          </div>
      <% end %>




  </div>
</div>
</div>

