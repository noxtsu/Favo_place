
    <div class="col-md-2" style="background-color: orange;">
      <div class="sidebar pt-5 sticky-top vh-100">

        <% if user_signed_in? %>
          <ul class="list-unstyled">
            <li class="pt-2">
              <%= link_to posts_path, class:"btn btn-outline-light btn-block", "data-turbolinks": false do %>
              <i class="fa-regular fa-map"></i> 投稿一覧
              <% end %>
          　</li>
            <li class="pt-2">
              <%= link_to user_path(current_user.id), class:"btn btn-outline-light btn-block" do %>
              <i class="fa-regular fa-user"></i> マイページ
              <% end %>
          　</li>
            <li class="pt-2">
              <%= link_to new_post_path, class:"btn btn-outline-light btn-block", "data-turbolinks": false do %>
              <i class="fa-solid fa-map-location-dot"></i> 新規投稿
              <% end %>
            </li>
            <li class="pt-2">
              <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-outline-light btn-block" do %>
              <i class="fa-solid fa-door-open"></i> ログアウト
              <% end %>
            </li>
          </ul>
        <% else %>
          <ul class="list-unstyled">
            <li>
              <p><strong>Wellcome gest user,<br>
              Register as a person and<br>
              post your memories!</strong></p>
            </li>
            <li class="pt-2">
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li class="pt-2">
              <%= link_to "ログイン", new_user_session_path %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
